{
  "name": "obobshennoe",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "rd -r public\\scripts 2>null & tsc",
    "build:dev": "rd -r public\\scripts 2>null & tsc -p tsconfig-dev.json",
    "build:watch": "cross-env nodemon -r dotenv/config src/index.ts",
    "start": "http-server -p 3000 --watch",
    "start:cli": "npm run build & node public/scripts",
    "lint": "eslint src --ext .js --ext .ts",
    "lint-fix": "eslint src --ext .js --ext .ts --fix"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "http-server": "^14.1.0",
    "ts-node": "^10.5.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "nodemon": "^2.0.15"
  }
}
